    <repositories>
        <repository>
            <id>geosolutions</id>
            <name>GeoSolutions public maven repository</name>
            <url>http://maven.geo-solutions.it/</url>
        </repository>
        
        <repository>
            <id>mule-deps</id>
            <name>Mule Dependencies</name>
            <url>http://dist.codehaus.org/mule/dependencies/maven2</url>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
    </repositories>

    <build>
        <finalName>unredd-portal</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.3.2</version>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                    <compilerArguments>
                        <endorseddirs>${endorsed.dir}</endorseddirs>
                    </compilerArguments>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <version>2.1.1</version>
                <configuration>
                    <failOnMissingWebXml>false</failOnMissingWebXml>
                    
                    <webResources>
                        <!-- jsp pages to be copied into WEB-INF -->
                        <resource>
                            <directory>webResources/${country}</directory>
                            <targetPath>WEB-INF/jsp</targetPath>
                            <includes>
                                <include>*.jsp</include>
                            </includes>
                        </resource>
                        
                        <!-- message bundle files -->
                        <resource>
                            <directory>webResources/${country}</directory>
                            <targetPath>WEB-INF/classes</targetPath>
                            <includes>
                                <include>messages*.properties</include>
                            </includes>
                        </resource>
                        
                        <resource>
                            <directory>webResources/${country}</directory>
                            <targetPath>css</targetPath>
                            <includes>
                                <include>*.css</include>
                            </includes>
                        </resource>
                        
                        <!-- country specific data -->
                        <resource>
                            <directory>webResources/${country}</directory>
                            <includes>
                                <include>data/</include>
                                <include>images/</include>
                                <include>loc/</include>
                            </includes>
                        </resource>
                        
                        <!-- country specific js file -->
                        <resource>
                            <directory>webResources/${country}</directory>
                            <targetPath>js</targetPath>
                            <includes>
                                <include>custom.js</include>
                            </includes>
                        </resource>
                    </webResources>
                </configuration>
            </plugin>
            
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>2.1</version>
                <executions>
                    <execution>
                        <phase>validate</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${endorsed.dir}</outputDirectory>
                            <silent>true</silent>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>javax</groupId>
                                    <artifactId>javaee-endorsed-api</artifactId>
                                    <version>6.0</version>
                                    <type>jar</type>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            
            <plugin>
                <groupId>org.mortbay.jetty</groupId>
                <artifactId>maven-jetty-plugin</artifactId>
                <version>6.1.20</version>
                <configuration>
<!--					<webAppSourceDirectory>${basedir}/war</webAppSourceDirectory>-->
                    <webAppConfig>
                        <contextPath>/portal</contextPath>
                    </webAppConfig>
                    <connectors>
                        <connector implementation="org.mortbay.jetty.nio.SelectChannelConnector">
                            <port>8101</port>
                            <maxIdleTime>60000</maxIdleTime>
                        </connector>
                    </connectors>
                    <reload>automatic</reload>
                </configuration>
            </plugin>
            
